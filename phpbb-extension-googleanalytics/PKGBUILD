developer=http://phpbb.com/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=1.0.3
## WARNING: Must change download URL when changing version; not encoded in URL
pkgrel=2
pkgdesc="Allows users to share phpBB topics and posts in various social networks"
arch=('any')
license=("GPL2")
source=("googleanalytics_${pkgver}.zip::https://www.phpbb.com/customise/db/download/146971")
releasepage=('https://www.phpbb.com/customise/db/extension/googleanalytics/')
sha512sums=('292904520e796d58749034dd02f928b4c9e334b7cb7591d4c35862bb654de87ce9aa531def88b2f7d423b5b99969be61c22c8488ac81d9f50d8f6ccdbc823a6e')
depends=(
    'phpbb'
)
options=('!strip')

package() {
# Manifest
    mkdir -p ${pkgdir}/var/lib/ubos/manifests
    install -m0644 ${startdir}/ubos-manifest.json $pkgdir/var/lib/ubos/manifests/${pkgname}.json

# Icons
    # mkdir -p ${pkgdir}/srv/http/_appicons/$pkgname
    # install -m644 ${startdir}/appicons/{72x72,144x144}.png $pkgdir/srv/http/_appicons/${pkgname}/

# Source
    mkdir -p ${pkgdir}/usr/share/${pkgname}
    cp -a ${srcdir}/phpbb ${pkgdir}/usr/share/${pkgname}/
}
